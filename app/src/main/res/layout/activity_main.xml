<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <!-- Top Naviagtion -->
    <include
        android:id="@+id/top_navigation"

        layout="@layout/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <!-- Damit alles Scrollbar bleibt -->
    <ScrollView
        android:id="@+id/main_scroll_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/top_navigation"

        android:fillViewport="true">

        <!-- Rest vom Layout bestimmt -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                app:iconifiedByDefault="false"
                app:queryHint="Search Here..." />

            <Button
                android:id="@+id/searchStart"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"

                android:text="Suche starten"
                android:backgroundTint="@color/onPrimaryContainerColor"
                android:textColor="@color/darkBlue"
                android:textSize="@dimen/klein"
                android:gravity="center"/>

            <Button
                android:id="@+id/searchFilter"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"

                android:text="Filter"
                android:backgroundTint="@color/secondaryColor"
                android:textColor="@color/onPrimaryColor"
                android:textSize="@dimen/klein"
                android:gravity="center"/>

            <!-- TESTING DUMMIES -->
            <TextView
                android:id="@+id/test_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textSize="@dimen/gross"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/test_user_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User-ID"
                android:textSize="@dimen/sehrklein"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/test_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Titel"
                android:textSize="@dimen/gross"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/test_post_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Post-ID"
                android:textSize="@dimen/sehrklein"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/test_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textSize="@dimen/mittel"
                android:padding="10dp"/>


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Balken  -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav"
        app:itemIconSize="@dimen/sehrgross"
        app:labelVisibilityMode="labeled"/>
</RelativeLayout>